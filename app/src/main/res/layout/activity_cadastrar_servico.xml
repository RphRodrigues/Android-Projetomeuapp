<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/linearLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15sp"
        android:paddingTop="10dp"
        android:paddingRight="15sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="5sp"
            android:text="@string/dados_do_cliente" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nomeClienteIdLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <EditText
                android:id="@+id/cadastrar_edtNomeClienteId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome_cliente"
                android:inputType="textPersonName" />
        </android.support.design.widget.TextInputLayout>

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->

            <!--<EditText-->
                <!--android:id="@+id/edtCpfCnpjId"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="@string/cpf_cnpj"-->
                <!--android:inputType="textPersonName" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="25sp"
            android:text="@string/endereco_servico" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <EditText
                android:id="@+id/cadastrar_edtRuaId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/rua"
                android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/complementoIdLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/cadastrar_edtComplementoId"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/complemento"
                    android:inputType="textMultiLine" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/bairroIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/complementoIdLayout"
                android:layout_toRightOf="@id/complementoIdLayout">

                <EditText
                    android:id="@+id/cadastrar_edtBairroId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bairro"
                    android:inputType="textMultiLine" />
            </android.support.design.widget.TextInputLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/cepIdLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/cadastrar_edtCepId"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/cep"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/numeroIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/cepIdLayout"
                android:layout_toRightOf="@id/cepIdLayout">

                <EditText
                    android:id="@+id/cadastrar_edtNumeroId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/numero"
                    android:inputType="number" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/cidadeIdLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/cadastrar_edtCidadeId"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/cidade"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/estadoIdLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/cidadeIdLayout"
                android:layout_toRightOf="@+id/cidadeIdLayout">

                <EditText
                    android:id="@+id/cadastrar_edtEstadoId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/estado"
                    android:inputType="text" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_marginLeft="5sp"
            android:layout_marginTop="25sp"
            android:text="@string/informacoes_do_servico" />

        <Spinner
            android:id="@+id/cadastrar_spinnerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/lista_servico"
            android:layout_marginTop="15sp"
            android:background="#f2f2f2">
        </Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5sp">

            <EditText
                android:id="@+id/cadastrar_edtDescricaoServicosId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/descricao_do_servico"
                android:inputType="textMultiLine" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/cadastrar_btnCriarOSId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:text="@string/cadastrar_servico" />
    </LinearLayout>
</ScrollView>
